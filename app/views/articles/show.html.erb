<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center">Article Details</h1>

    <div class="mb-6">
      <h2 class="text-2xl font-semibold text-gray-700 mb-2">Title:</h2>
      <p class="text-xl text-gray-900 bg-gray-50 p-4 rounded"><%= @article.title %></p>
    </div>

    <div class="mb-6">
      <h2 class="text-2xl font-semibold text-gray-700 mb-2">Description:</h2>
      <p class="text-lg text-gray-800 bg-gray-50 p-4 rounded leading-relaxed"><%= @article.description %></p>
    </div>

    <div class="mb-8">
      <h2 class="text-2xl font-semibold text-gray-700 mb-2">Created At:</h2>
      <p class="text-lg text-gray-600 bg-gray-50 p-4 rounded"><%= @article.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>

    <div class="flex flex-wrap gap-4 justify-center">
      <%= link_to 'Edit', edit_article_path(@article), class: 'bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-6 rounded transition duration-200' %>
      <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded transition duration-200' %>
      <%= link_to 'Back to Articles', articles_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded transition duration-200' %>
    </div>
  </div>
</div>