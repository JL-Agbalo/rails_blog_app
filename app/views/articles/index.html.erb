<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">Article Listing</h1>

  <div class="overflow-x-auto shadow-lg rounded-lg">
    <table class="min-w-full bg-white">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @articles.each do |article| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= article.title %></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= truncate(article.description, length: 100) %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to 'Show', article_path(article), class: 'text-blue-600 hover:text-blue-900 font-medium' %>
              <%= link_to 'Edit', edit_article_path(article), class: 'text-green-600 hover:text-green-900 font-medium' %>
              <%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-900 font-medium' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-8 text-center">
    <%= link_to 'Create New Article', new_article_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 inline-block' %>
  </div>
</div>